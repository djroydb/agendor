<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Transparent"
    tools:context=".view.AgendorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/nova_tarefa"
            android:textSize="@dimen/text_18"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@color/white"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/toggleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ToggleButton
                        android:id="@+id/email"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_margin="5dp"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""
                        android:gravity="center_horizontal|center_vertical"
                        android:button="@drawable/ic_baseline_mail_outline_24"
                        android:background="@drawable/toggle_layers"
                        android:onClick="onToggleClicked"
                        android:tag="EMAIL"
                        />
                    <ToggleButton
                        android:id="@+id/ligacao"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_margin="5dp"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""
                        android:gravity="center_horizontal|center_vertical"
                        android:button="@drawable/ic_baseline_call_24"
                        android:background="@drawable/toggle_layers"
                        android:onClick="onToggleClicked"
                        android:tag="LIGACAO"
                        />
                    <ToggleButton
                        android:id="@+id/proposta"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_margin="5dp"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""
                        android:gravity="center_horizontal|center_vertical"
                        android:button="@drawable/ic_baseline_format_list_bulleted_24"
                        android:background="@drawable/toggle_layers"
                        android:onClick="onToggleClicked"
                        android:tag="PROPOSTA"
                        />
                    <ToggleButton
                        android:id="@+id/reuniao"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_margin="5dp"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""
                        android:gravity="center_horizontal|center_vertical"
                        android:button="@drawable/ic_baseline_business_center_24"
                        android:background="@drawable/toggle_layers"
                        android:onClick="onToggleClicked"
                        android:tag="REUNIAO"
                        />
                    <ToggleButton
                        android:id="@+id/visita"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_margin="5dp"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""
                        android:gravity="center_horizontal|center_vertical"
                        android:button="@drawable/ic_baseline_place_24"
                        android:background="@drawable/toggle_layers"
                        android:onClick="onToggleClicked"
                        android:tag="VISITA"
                        />
                    <ToggleButton
                        android:id="@+id/outro"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_margin="5dp"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""
                        android:gravity="center_horizontal|center_vertical"
                        android:button="@drawable/ic_baseline_more_horiz_24"
                        android:background="@drawable/toggle_layers"
                        android:onClick="onToggleClicked"
                        android:tag="OUTRO"
                        />
                </RadioGroup>
            </LinearLayout>
        </HorizontalScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:textSize="@dimen/text_18"
                android:text="@string/quando" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:clickable="false"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/dateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_weight=".1"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/edit_border">
                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:textSize="@dimen/text_16"
                    android:gravity="end"
                    android:hint="4 fev 2020"
                    android:textColor="@color/black"
                    tools:ignore="SpUsage"/>
                <ImageView
                    android:id="@+id/datePickerImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:background="@drawable/ic_date_range" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hourLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_marginStart="1dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/edit_border">
                <TextView
                    android:id="@+id/hourText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:textSize="@dimen/text_16"
                    android:gravity="end"
                    android:hint="12:00"
                    android:textColor="@color/black"
                    tools:ignore="SpUsage"/>
                <ImageView
                    android:id="@+id/hourPickerImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:background="@drawable/ic_clock" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:text="@string/client" />
        </LinearLayout>
        <EditText
            android:id="@+id/clientEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/text_18"
            android:background="@drawable/edit_border"
            android:padding="5dp"
            android:nextFocusDown="@id/descriptionEditText"
            android:imeOptions="actionGo"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Digite o nome do Cliente"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center|top"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_editor_text"/>
            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:textSize="@dimen/text_18"
                android:layout_marginEnd="20dp"
                android:hint="@string/descricao"
                android:background="@drawable/edit_border"
                android:ems="10"
                android:minLines="5"
                android:imeOptions="actionDone"
                android:maxLength="150"
                android:gravity="start|top"
                android:inputType="textMultiLine|textNoSuggestions" />
        </LinearLayout>

            <Button
                android:id="@+id/addAssignmentButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/text_18"
                android:layout_centerInParent="true"
                android:text="AGENDAR TAREFA"/>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/agendorProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="150dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
</RelativeLayout>